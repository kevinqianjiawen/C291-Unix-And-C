char *mystrcpy(char *sec, char *dst){
     int i = 0;
     while(*(sec + i) != '\o){
     	*(dst+i) = *(sec+i);
	i++;
	}
     *(dsst+i) = '\o';
     return dst;
}


void main(void){
     char buf1 []= "hello";
     char buf2 [80];
     char *p;
     p = mystrcpy(buf1, buf2);
}


char *mystrncpy(char *src, char *dst, int size){
     int i = 0;
     while(*(src+i) != '\0' && i < size){
     	*(dst+i)=*(src+i);
	i++;
     }

     for( ; i<size; i++){
     *(dst+i)='\o';
     }
     return dst;
}

char * mystrchr(char *str, char c){
    for( ; *str != '\o'; str++){
    	 if(*str == c){
	   return (str);
	 }
    }
    return (0);
}

